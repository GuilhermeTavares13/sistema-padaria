<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Gestão</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/telas-cadastro.css">
</head>
<body>
    <% 
        let telaClienteVisible = true;
    %>

    <!-- sidebar -->
    <div class="sidebar">
        <nav class="nav flex-column">
            <a class="nav-link" href="/">
                <span class="icon">
                    <i class="bi bi-house"></i>
                </span>
                <span class="description">Início</span>
            </a>

            <!-- menu with dropdown -->
            <a class="nav-link" href="" data-bs-toggle="collapse" data-bs-target="#submenu-cadastros" aria-expanded="false" aria-controls="submenu-cadastros">
                <span class="icon">
                    <i class="bi bi-folder"></i>
                </span>
                <span class="description">Cadastros <i class="bi bi-caret-down-fill"></i></span>
            </a> 

            <!-- submenu items -->
            <div class="sub-menu collapse" id="submenu-cadastros">
                <a class="nav-link">
                    <span class="icon">
                        <i class="bi bi-person"></i>
                    </span>
                    <span class="description">Clientes</span>
                </a>
            </div>
            <div class="sub-menu collapse" id="submenu-cadastros">
                <a class="nav-link" href="#">
                    <span class="icon">
                        <i class="bi bi-cart"></i>
                    </span>
                    <span class="description">Produtos</span>
                </a>
            </div>

            <!-- menu with dropdown -->
            <a class="nav-link" href="" data-bs-toggle="collapse" data-bs-target="#submenu-movimentos" aria-expanded="false" aria-controls="submenu-movimentos">
                <span class="icon">
                    <i class="bi bi-arrow-return-right"></i>
                </span>
                <span class="description">Movimentos <i class="bi bi-caret-down-fill"></i></span>
            </a>  

            <!-- submenu items -->
            <div class="sub-menu collapse" id="submenu-movimentos">
                <a class="nav-link" href="/">
                    <span class="icon">
                        <i class="bi bi-shop"></i>
                    </span>
                    <span class="description">Compras</span>
                </a>
            </div>
            <div class="sub-menu collapse" id="submenu-movimentos">
                <a class="nav-link" href="/">
                    <span class="icon">
                        <i class="bi bi-cash"></i>
                    </span>
                    <span class="description">Vendas</span>
                </a>
            </div>

            <!-- menu with dropdown -->
            <a class="nav-link" href="" data-bs-toggle="collapse" data-bs-target="#submenu-relatorios" aria-expanded="false" aria-controls="submenu-relatorios">
                <span class="icon">
                    <i class="bi bi-file-earmark-break"></i>
                </span>
                <span class="description">Relatórios <i class="bi bi-caret-down-fill"></i></span>
            </a>  

            <!-- submenu items -->
            <div class="sub-menu collapse" id="submenu-relatorios">
                <a class="nav-link" href="/">
                    <span class="icon">
                        <i class="bi bi-shop"></i>
                    </span>
                    <span class="description">Relatório de Compras</span>
                </a>
            </div>
            <div class="sub-menu collapse" id="submenu-relatorios">
                <a class="nav-link" href="/">
                    <span class="icon">
                        <i class="bi bi-cash"></i>
                    </span>
                    <span class="description">Relatório de Vendas</span>
                </a>
            </div>


            <a class="nav-link" href="/">
                <span class="icon">
                    <i class="bi bi-gear"></i>
                </span>
                <span class="description">Configurações</span>
            </a>
        </nav>
    </div>
    
    <!-- main -->
    <main class="main-content">
        <%- include('./cliente.ejs', { visible: telaClienteVisible }) %>
    </main>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dragbox-script.js"></script>
    <script src="/js/menu-script.js"></script>
</body>
</html>