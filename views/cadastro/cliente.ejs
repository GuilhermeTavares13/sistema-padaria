<div class="tela-cadastro dragbox collapse" id="tela-cadastro-cliente">
   <div class="container mt-5"> 
        
        <h2>Cadastro de Cliente</h2>
        <form class="row g-3" method="POST" action="/cliente">
            <div class="col-md-8">
                <label for="name" class="form-label">Nome</label>
                <input type="text" class="form-control" id="name" required placeholder="Nome aqui">
            </div>
            <div class="col-md-4">
                <label for="cpfcnpj" class="form-label">CPF/CNPJ</label>
                <input type="text" class="form-control" id="cpfcnpj" required placeholder="999.999.999-99">
            </div>
            <div class="col-md-8">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="email" required placeholder="Seu e-mail aqui">
            </div>
            <div class="col-md-4">
                <label for="telefone" class="form-label">Telefone</label>
                <input type="telefone" class="form-control" id="telefone" required placeholder="+55 (99) 99999 - 9999">
            </div>
            <div class="col-md-12">
                <label for="observacao" class="form-label">Observação</label>
                <textarea class="form-control" id="observacao" rows="3" placeholder="Escreva algo sobre seu cliente"></textarea>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-danger">Cancelar</button>
                <button type="submit" class="btn btn-primary">Gravar</button>
            </div>
        </form>
